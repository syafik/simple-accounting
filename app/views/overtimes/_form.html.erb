<% if current_user.role.name == "admin" %>
<div class="form-group" style="width: 50%">
  <label>Karyawan:</label>
  <%= f.select :user_id, options_for_select(@users, @overtime.user_id), {}, {class: "form-control"}%>
</div>
<% else %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>


<div class="form-group" style="width: 50%">
  <label>Tanggal:</label>
  <div class="input-group">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
    <%= f.text_field :date, :placeholder=> "Tanggal" , class: "form-control pull-right date_custom", required: true %>
  </div>
</div>


<div class="bootstrap-timepicker" style="width: 50%">
  <div class="form-group">
    <label>Jam Mulai:</label>
    <div class="input-group">
      <%= f.text_field :start_time, class: "form-control timepicker test" %>
      <div class="input-group-addon">
        <i class="fa fa-clock-o"></i>
      </div>
    </div><!-- /.input group -->
  </div><!-- /.form group -->
</div>

<div class="bootstrap-timepicker" style="width: 50%">
  <div class="form-group">
    <label>Jam Selesai:</label>
    <div class="input-group">
      <%= f.text_field :end_time, class: "form-control timepicker test" %>
      <div class="input-group-addon">
        <i class="fa fa-clock-o"></i>
      </div>
    </div><!-- /.input group -->
  </div><!-- /.form group -->
</div>

<% if current_user.role.name == "admin" %>
<div class="form-group" style="width: 50%; text-align: left;" >
  <label>Status:</label>
  <%= f.select :status, options_for_select([['Terima', 1],['Tolak', 2]], @overtime),{},class: "form-control", required: true%>

</div>
<% end %>

<div class="form-group" style="width: 50%">
  <label>Deskripsi:</label>
  <%= f.text_area :description, :cols => "30", :rows => "10", class: "form-control" %>
</div>



<%= f.submit nil, :class=>'btn btn-default' %>








<% end %>

