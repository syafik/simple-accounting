Gaji
<% end%>

<% content_for :content_sub_title do %>
Detail Data Riwayat Biaya Lembur
<% end%>

<% content_for :content_body do %>
<div align="left">
	<table>
		<tr>
			<td> <b> Tanggal </b> </td>
			<td> <b> :</b> </td>
			<td> <%= @oph.applicable_date %></td>
		</tr>
		<tr>
			<td> <b> Nama Karyawan </b> </td>
			<td> <b> :</b> </td>
			<td> <%= "#{@oph.try(:user).try(:first_name)} #{@oph.try(:user).try(:last_name)}"%> </td>
		</tr>
		<tr>
			<td> <b> Biaya Lembur Siang </b> </td>
