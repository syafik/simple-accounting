<% content_for :content_title do %>
  Point
<% end%>

<% content_for :content_sub_title do %>
  Point History
<% end%>

<% content_for :content_body do %>
  <table style="text-align: center; width: 100%; ">
    <tr>
    <td align="right"><%= link_to "<< sebelumnya", point_histories_path(:search => @date - 1.month), class: "custom-link" %></td>
    <td style="text-align: center; width: 20%; "><h4><%= @date.strftime("%B-%Y") %></h4></td>
    <td align="left"><%= link_to "selanjutnya >>", point_histories_path(:search => @date + 1.month), class: "custom-link"%></td>
    </tr>
  </table>
    <style>
      table tr th, table tr td{text-align: center;}
    </style>
    <table class="table bordered">
      <tr>
        <th>Tanggal</th>
        <th>Tipe Poin</th>
        <th>Point</th>
        <th>User</th>
      </tr>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.created_at.to_date %></td>
        <td><%= history.point_historyable_type %></td>
        <td><%= history.points %></td>
        <td><%= history.user.full_name %></td>
      </tr>
    <% end %>
    </table>
<% end %>

<% content_for :content_nav do %>
    <div class="btn btn-primary">Total Poin Anda : <%= @histories.sum(:points) %> Poin</div>
    <div class="btn btn-primary">Total Poin Tahun Ini : <%= @yearpoints.sum(:points) %> Poin</div>
<% end %>
