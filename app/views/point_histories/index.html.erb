<% content_for :content_title do %>
  Point
<% end%>

<% content_for :content_sub_title do %>
  Point History
<% end%>

<% content_for :content_body do %>
    <style>
      table tr th, table tr td{text-align: center;}
    </style>
    <table class="table table-bordered table-hover">
      <tr>
        <th>Tanggal</th>
        <th>Tipe Poin</th>
        <th>Point</th>
        <th>User</th>
      </tr>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.created_at.to_date %></td>
        <td><%= history.point_historyable_type %></td>
        <td><%= history.points %></td>
        <td><%= history.user.full_name %></td>
      </tr>
    <% end %>
    </table>
<% end %>

<% content_for :content_nav do %>
    <div class="btn btn-primary">Total Poin Anda : <%= current_user.point %> Poin</div>
<% end %>
