<style type="text/css">
  th {
    text-align: center;
  }
</style>

<% content_for :content_title do %>
  Gaji
<% end%>

<% content_for :content_sub_title do %>
  Data Jadwal Penggajian
<% end%>

<% content_for :content_body do %>

  <table class="table table-striped">
	<tbody><tr>
	  <th>Date</th>
	  <th><span class="pull-right">Action</span></th>
	</tr>
	<% @salary_schedules.each do |salary_schedule| %>
	  <tr>
		<td><%= salary_schedule.date %></td>
		<td>
		  <span class="pull-right">
			<%= link_to '<small class="badge bg-yellow">Generated</small>'.html_safe, '#' if salary_schedule.status  %>
		    <%= link_to '<small class="badge bg-blue">Show</small>'.html_safe, salaries_path(salary_schedule: salary_schedule.id) %>
			<%= link_to '<small class="badge bg-green">Edit</small>'.html_safe, edit_salary_schedule_path(salary_schedule) %>
			<%= link_to '<small class="badge bg-red">Delete</small>'.html_safe, salary_schedule, confirm: 'Are You Sure?', method: :delete %>
		</span>
		</td>
	  </tr>
	<% end %>
	</tbody></table>

<% end %>

<% content_for :content_nav do %>
  <%= link_to 'Buat Jadwal', new_salary_schedule_path, :class=>'btn btn-primary' %>
<% end %>

