<h4>Daftar plafon Tahun <%= @plafon.year%></h4>
<b>Nama :  <%= @plafon.family.name.camelize%> </b>
<table id="example2" class="table table-bordered table-hover">
  <tr>
    <th>Grade</th>
    <td><%= @plafon.grade.name%></td>
  </tr>
  <tr>
    <th>RJ (<%= number_to_currency(@plafon.grade.rj, unit: "Rp. ", precision: 0)%>)</th>
    <td>Saldo <b><%= number_to_currency(@plafon.saldo_rj, unit: "Rp. ", precision: 0)%> </b>/ Tahun</td>
  </tr>
  <tr>
    <th>RI</th>
    <td><%= number_to_currency(@plafon.grade.ri, unit: "Rp. ", precision: 0) %> / Hari</td>
  </tr>
  <tr>
    <th>Operasi</th>
    <td><%= number_to_currency(@plafon.grade.operasi, unit: "Rp. ", precision: 0) %> / Kejadian</td>
  </tr>
    <% if @plafon.family.status == "Istri" || (@plafon.family.familyable && @plafon.family.familyable.gender == false)%>
  <tr>
    <th>RB Normal</th>
    <td><%= number_to_currency(@plafon.grade.rb_normal, unit: "Rp. ", precision: 0) %> / Kehamilan</td>
  </tr>
  <tr>
    <th>RB Caesar</th>
    <td><%= number_to_currency(@plafon.grade.rb_caesar, unit: "Rp. ", precision: 0) %> / Kehamilan</td>
  </tr>
  <% end %>
</table>
