<% content_for :bottom_js do %>
    <%= javascript_include_tag "jquery.inputmask" %>
    <%= javascript_include_tag "jquery.inputmask.date.extensions" %>
    <%= javascript_include_tag "jquery.inputmask.extensions" %>
    <%= javascript_include_tag "call_datepicker" %>
    <%= javascript_include_tag "tab" %>
<% end%>

<% content_for :content_title do %>
Pinjaman
<% end%>

<% content_for :content_sub_title do %>
Form Pembayaran Hutang
<% end%>

<% content_for :content_body do %>
<ul class="nav nav-tabs" id="transactionTab">
	<li class="active"><a href="#approved">Daftar Pengajuan Tersetujui</a></li>
	<li><a href="#rejected">Daftar Pengajuan Tertolak</a></li>
</ul>

<div class="tab-content">
	<div class="tab-pane active" id="approved">
		<!-- approved transaction list -->

		<%= render partial: "loan_payment_history", locals: { loan_payment_history: @loan_payment_history[:approveds]} %>
		<!-- approved transaction list -->
	</div>

	<div class="tab-pane" id="rejected">
		<!-- rejected transaction list -->

		<%= render partial: "loan_payment_history", locals: { loan_payment_history: @loan_payment_history[:rejecteds]} %>
		<!-- rejected transaction list -->
	</div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-body">
				<div class="row">
					<div class="tab-content">
						<%= render 'form' %>
					</div>
				</div>
				
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end%>

<% content_for :content_nav do %>
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
	Buat Pengajuan
</button>
<%= link_to 'Kembali', loan_payments_path, :class=>'btn btn-primary' %>  
<% end%>