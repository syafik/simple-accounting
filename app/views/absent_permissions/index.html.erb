<style>
    #myTab li a:hover, #myTab li a:active, #myTab li a:focus { color:black; }

</style>

<% content_for :bottom_js do %>
<script type="text/javascript">
    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })
</script>
<% end%>

<% content_for :content_title do %>
Pengajuan
<% end%>

<% content_for :content_sub_title do %>
Data Pengajuan Ijin dan Cuti
<% end%>

<% content_for :content_body do %>
<ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#pending">Daftar Pengajuan Tertunda</a></li>
    <li><a href="#approved">Daftar Pengajuan Tersetujui</a></li>
    <li><a href="#rejected">Daftar Pengajuan Tertolak</a></li>
    <li><a href="#taken">Daftar Pengajuan Terambil</a></li>
    <li><a href="#decline">Daftar Pengajuan Batal</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="pending">
        <!-- pendding transaction list -->
        
        <%= render partial: "absent_permission_list", locals: { absent_permissions:  @absent_permissions[:pendings] } rescue "DATA MASIH BELUM TERISI" %>
        <!-- pendding transaction list -->
    </div>

    <div class="tab-pane" id="approved">
        <!-- approved transaction list -->
        
        <%= render partial: "absent_permission_list", locals: { absent_permissions:  @absent_permissions[:approveds] } rescue "DATA MASIH BELUM TERISI" %>
        <!-- approved transaction list -->
    </div>
    
    <div class="tab-pane" id="rejected">
        <!-- rejected transaction list -->
        
        <%= render partial: "absent_permission_list", locals: { absent_permissions:  @absent_permissions[:rejecteds] } rescue "DATA MASIH BELUM TERISI" %>
        <!-- rejected transaction list -->
    </div>
     <div class="tab-pane" id="taken">
        <!-- rejected transaction list -->
        
        <%= render partial: "absent_permission_list", locals: { absent_permissions:  @absent_permissions[:takens] } rescue "DATA MASIH BELUM TERISI" %>
        <!-- rejected transaction list -->
    </div>
    <div class="tab-pane" id="decline">
        <!-- rejected transaction list -->
        
        <%= render partial: "absent_permission_list", locals: { absent_permissions:  @absent_permissions[:declines] } rescue "DATA MASIH BELUM TERISI" %>
        <!-- rejected transaction list -->
    </div>
</div>
<% end%>

<% content_for :content_nav do %>

<% end%>


<% content_for :bottom_js do %>
<script type="text/javascript">
    $(".approve_btn").click(function(){
        $id = $(this).attr("data-attribute");
        $('#myModal'+$id +' #decision').val("approved");
        $('#myModal'+$id +' #long').val(12);
        // $("#decision").val("approved");
    });
    $(".reject_btn").click(function(){
        $id = $(this).attr("data-attribute");
        $('#myModal'+$id +' #decision').val("rejected");
        $('#myModal'+$id +' #long').val(null);
        $('#myModal'+$id +' #long').hide();
    });
    
</script>
<% end%>