<%= form_for(@loan_permission,:html => { style: "text-align: left;"}) do |f| %>
<% if @loan_permission.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@loan_permission.errors.count, "error") %> prohibited this loan_permission from being saved:</h2>

  <ul>
    <% @loan_permission.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group" style="width: 50%">
  <label>Name Pegawai:</label>
  <%= "#{current_user.first_name} #{current_user.last_name}"%>
  <% if current_user.role_id != 2%>
  <%= f.hidden_field :user_id, class: "form-control", value: current_user.id %>
  <% end %>
</div>

<div class="form-group" style="width: 50%">
  <label>Tanggal Pengajuan: </label>
  <%= Date.today.strftime("%d-%B-%Y") %>
  <% if current_user.role_id == 2%>
  <%= f.hidden_field :approval_date, class: "form-control", value: Date.today %>
  <%else%>
  <%= f.hidden_field :submission_date, class: "form-control", value: Date.today %>
  <% end %>  
</div>

<div class="form-group" style="width: 50%">
  <label>Besar Dana:</label>
  <%= f.number_field :total_loan, class: "form-control" %>
</div>

<% status = nil%>
<% if current_user.role_id == 2 %>
<div class="form-group" style="width: 50%">
  <label>Deskripsi:</label>
  <%= f.text_area :description, :cols => "30", :rows => "10", class: "form-control" %>
</div>
<% status = 2%>
<% else %>
<div class="form-group" style="width: 50%">
  <label>Pesan:</label>
  <%= f.text_area :message, :cols => "30", :rows => "10", class: "form-control" %>
</div>
<% status = 0%>
<% end %>

<%= f.hidden_field :status, value: status %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
