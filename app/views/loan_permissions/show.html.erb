<% content_for :content_title do %>
Pengajuan
<% end%>

<% content_for :content_sub_title do %>
Detail Pengajuan Izin dan Cuti
<% end%>

<% content_for :content_body do %>
<div align="left">
  <table>
    <tr>
      <td> <b>Tanggal Pengajuan </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @loan_permission.submission_date.strftime("%d-%B-%Y") %> </td>
    </tr>
    <tr>
      <td> <b>Nama Karyawan </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @loan_permission.user.first_name %> </td>
    </tr>

    <tr>
      <td> <b>Pesan </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @loan_permission.message %> </td>
    </tr>

    <tr>
      <td> <b>Deskripsi </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @loan_permission.description %> </td>
    </tr>

  </table>
</div>
<% end%>

<% content_for :content_nav do %>
<% if current_user.role.name == 2 %>
<%= link_to 'Kembali', loan_permissions_path, :class=>'btn btn-primary' %>
<% else %>
<%= link_to 'Kembali', new_loan_permission_path, :class=>'btn btn-primary' %>
<% end %>

<% end%>
