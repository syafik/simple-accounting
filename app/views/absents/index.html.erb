<h2 class="text-center">ABSENSI KARYAWAN</h2>


   <%= form_tag(absents_path, :method => "get", class: "navbar-form", id: "search-form", remote: true) do %>
<div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search User" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
    <button class="btn" type="submit"><i class="icon-search"></i></button>
</div>
  <% end %>

<div>
<%= link_to 'Laporan Bulanan', absents_path,:params => 3,:class=>'btn btn-primary' %>
</div>

<table id="replace-table" class="table tablesorter">
 <%= render partial: "list", locals: {absents: @absents} %>
</table>
<br />

<%= link_to 'New Absent', new_absent_path, :class=>'btn btn-primary' %>
