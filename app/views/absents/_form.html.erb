<%= form_for(@absent,:html => { style: "text-align: left;"} ) do |f|  %>
<% if @absent.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@absent.errors.count, "error") %> prohibited this absent from being saved:</h2>

  <ul>
    <% @absent.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% if current_user.role_id == 2%>
<div class="form-group" style="width: 50%">
  <label>Tanggal:</label>
  <div class="input-group">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
    <%= f.text_field :date, :placeholder=> "Tanggal" , class: "form-control pull-right date_custom" %>
  </div>
</div>

<div class="form-group" style="width: 50%">
  <label>Karyawan:</label>
  <%= f.select :user_id, options_for_select(@users), {}, {class: "form-control", required: true}%>
</div>

<div class="form-group" style="width: 50%">
  <label>Kategori:</label>
  <%= f.select :categories, options_for_select([['Masuk',1], ['Alfa',2], ['Izin',3], ['Sakit',4]], @absent.try(:categories)),{}, class: "form-control", required: true%>
</div>

<div class="form-group" style="width: 50%">
  <label>Deskripsi:</label>
  <%= f.text_area :description, :cols => "30", :rows => "10", class: "form-control" %>
</div>

<% else %>

<div class="form-group" style="width: 50%">
  <label>Tanggal:</label>
  <div class="input-group">
    <%= f.hidden_field :date, value: Date.today, class: "form-control pull-right date_custom" %>
    <%= Date.today%>
  </div>
</div>

<div class="form-group" style="width: 50%">
  <label>Jam:</label>
  <div class="input-group">
    <%= f.hidden_field :time_in, value: "#{Time.now.hour}:#{Time.now.min}:#{Time.now.sec}", class: "form-control pull-right date_custom" %>
    <%= "#{Time.now.hour}:#{Time.now.min}:#{Time.now.sec}"%>
  </div>
</div>

<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :categories, value: 1 %>
<% end %>
<%= f.submit btn_title, :class=>'btn btn-default' %>



<% end %>

