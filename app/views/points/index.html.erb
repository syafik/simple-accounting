<% content_for :content_title do %>
  Point
<% end%>

<% content_for :content_sub_title do %>
  List Point
<% end%>

<% content_for :content_body do %>
    <style>
      table tr th, table tr td{text-align: center;}
    </style>
    <table class="table bordered">
    <tr>
      <th>Name</th>
      <th>Point</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @points.each do |point| %>
    <tr>
      <td><%= point.name %></td>
      <td><%= point.point %></td>
      <td><%= link_to 'Show', point %></td>
      <td><%= link_to 'Edit', edit_point_path(point) %></td>
      <td><%= link_to 'Destroy', point, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<% content_for :content_nav do %>
    <%= link_to 'Buat Point Baru', new_point_path, :class => "btn btn-primary"%>
<% end %>
