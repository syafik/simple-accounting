<% content_for :content_title do %>
  Post
<% end%>

<% content_for :content_sub_title do %>
  Post Category
<% end%>

<% content_for :content_body do %>
  <table class="table bordered">
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @blog_categories.each do |blog_category| %>
    <tr>
      <td><%= blog_category.name %></td>
      <td><%= link_to 'Show', blog_category%></td>
      <td><%= link_to 'Edit', edit_blog_category_path(blog_category) %></td>
      <td><%= link_to 'Destroy', blog_category, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<% content_for :content_nav do %>
  <%= link_to 'Buat Post Category Baru', new_blog_category_path, :class => "btn btn-primary" %>
<% end  %>
