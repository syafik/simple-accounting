  <% if @manage_user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@manage_user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @manage_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end if @manage_user %>



  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Email:</label>
    <%= f.text_field :email, :placeholder=> "Email" , class: "form-control", type: "email", required: true %>
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Nama Depan:</label>
    <%= f.text_field :first_name, :placeholder=> "Nama Depan",  class: "form-control", required: true %>
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Nama Tengah:</label>
    <%= f.text_field :mid_name, :placeholder=> "Nama Tengah",  class: "form-control" %>
  </div>
  
  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Nama Akhir:</label>
    <%= f.text_field :last_name, :placeholder=> "Nama Belakang",  class: "form-control" %>
  </div>

  
  

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Jenis Kelamin:</label>
    
    <%= f.radio_button :gender, :class=> "form-control", :value=> true, required: true %> Pria
    <%= f.radio_button :gender, :class=> "form-control", :value=> false, required: true %> Wanita
    
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Agama:</label>
    <%= f.select :religion, options_for_select([['Islam', 'islam'],['Kristen', 'Kristen'],['Budha','Budha'],['Hindu','Hindu']]),{},class: "form-control", required: true%>
    
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Tanggal Lahir:</label>
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      <%= f.text_field :birth_date, :placeholder=> "Tanggal Lahir" , class: "form-control pull-right date_custom",type: "date", required: true %>
    </div>
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Telephone:</label>
    <%= f.number_field :telephone, :placeholder=> "Telephone",  class: "form-control", "data-mask"=>"",  "data-inputmask" => "'mask': '(999) 999-9999'" , required: true %>
  </div>

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Alamat:</label>
    <%= f.text_field :address, :placeholder=> "Alamat",  class: "form-control", required: true %>
  </div>

   <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Maksimal Cuti</label>
    <%= f.number_field :max_furlough, :placeholder=> "Maksimal Cuti ",  value: 12, class: "form-control", required: true %>
    
    
  </div>

  

  <div class="form-group" style="width: 50%; text-align: left;" >
    <label>Peran:</label>
    <%= f.select :role_id, options_for_select(@roles.uniq), {},  class: "form-control" %>
    
  </div>

  <div class="wrapeer-sub-category" id="nested-sub-category">
    <%= f.fields_for :salary_histories do |builder| %>
    <%= render "salary_histories_fields", :f => builder %>
    <% end %>
  </div>

  <div class="wrapeer-sub-category" id="nested-sub-category">
    <%= f.fields_for :overtime_payment_histories do |builder| %>
    <%= render "overtime_payment_histories_fields", :f => builder %>
    <% end %>
  </div>



  <div class="form-group" style="width: 50%; text-align: left;" >
    <%= f.submit btn_title, :class=>'btn btn-default' %>
  </div>

  
