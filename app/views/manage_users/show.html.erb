<% content_for :content_title do %>
Karyawan
<% end%>

<% content_for :content_sub_title do %>
Detail Karyawan
<% end%>

<% content_for :content_body do %>

<div align="left">
  <table>
    <tr>
      <td> <b> Email </b> </td>
      <td> <b> :</b> </td>
      <td><%= @manage_user.email %> </td>
    </tr>
    <tr>
      <td> <b>Nama Karyawan </b> </td>
      <td> <b> :</b> </td>
      <td><%= "#{@manage_user.first_name} #{@manage_user.last_name} "%> </td>
    </tr>
    <tr>
      <td> <b> Tanggal Lahir </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @manage_user.birth_date %></td>
    </tr>
    <tr>
      <td> <b> Jenis Kelamin </b> </td>
      <td> <b> :</b> </td>
      <% if @manage_user.gender == true %>
      <td> Pria </td>
      <% else %>
      <td> Wanita </td>
      <% end %>
    </tr>

    <tr>
      <td> <b> Telephone </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @manage_user.telephone %></td>
    </tr>

    <tr>
      <td> <b> Alamat </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @manage_user.address %></td>
    </tr>

    <tr>
      <td> <b> Peran </b> </td>
      <td> <b> :</b> </td>
      <td> <%= @manage_user.role.name %></td>
    </tr>

    <tr>
      <td> <b> Gaji </b> </td>
      <td> <b> :</b> </td>
      <td> <%= number_to_currency( @manage_user.salary_histories.where(:activate => true).first.payment, :unit => "Rp ")   %></td>
    </tr>

    <tr>
      <td> <b> Harga Lembur Siang  </b> </td>
      <td> <b> :</b> </td>
      <td> <%= number_to_currency( @manage_user.salary_histories.where(:activate => true).first.day_payment_overtime, :unit => "Rp ")   %></td>
    </tr>

    <tr>
      <td> <b> Harga Lembur Siang  </b> </td>
      <td> <b> :</b> </td>
      <td> <%= number_to_currency( @manage_user.salary_histories.where(:activate => true).first.night_payment_overtime, :unit => "Rp ")   %></td>
    </tr>

  </table>
</div>
<% end%>



<% content_for :content_nav do %>
<%= link_to 'Ubah', edit_manage_user_path(@manage_user), :class=>'btn btn-primary' %> 
<%= link_to 'Kembali', manage_users_path, :class=>'btn btn-primary' %>
<% end%>






