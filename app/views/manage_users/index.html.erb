<style type="text/css">
  th {
    text-align: center;
  }
</style>

<% content_for :content_title do %>
Karyawan
<% end%>

<% content_for :content_sub_title do %>
Daftar Karyawan
<% end%>

<% content_for :content_body do %>

<table id="example2" class="table table-bordered table-hover">
  <tr>
    <th> Nama </th>
    <th> No. telepon </th>
    <th> Email </th>
    <th> Jabatan </th>
    <th> Gaji </th>

    <th> No Rek </th>
    <th> Aksi </th>
    
  </tr>

  <% @manage_users.each do |manage_user| %>
  <tr>
    <td><%= "#{manage_user.first_name} #{manage_user.last_name} ".downcase.titleize%></td>
    <td><%= manage_user.telephone %></td>
    <td><%= manage_user.email %></td>
    <td><%= manage_user.position %></td>
    <td>
      <p>Gaji Aktif</p>
      <p>
        <%= number_to_currency( manage_user.salary_histories.where(activate: true).first.payment, :unit => "Rp ") rescue 0 %>
      </p>
      <p>Lembur Siang</p>
      <p>
        <%= number_to_currency( manage_user.salary_histories.where(activate: true).first.day_payment_overtime, :unit => "Rp ") rescue 0 %>
      </p>
      <p>Lembur Malam</p>
      <p>
        <%= number_to_currency( manage_user.salary_histories.where(activate: true).first.night_payment_overtime, :unit => "Rp ") rescue 0%>
      </p>
    </td>
    <td><%= manage_user.account_number %></td>


    <td>
      <%= link_to 'Lihat', manage_user_path(manage_user), :class=>'btn btn-info' %>  <br/>
      <%= link_to 'Lihat Riwayat Gaji', salary_histories_path(user_id: manage_user.id), :class=>'btn btn-success' %>  <br/>
      <%= link_to 'Ubah', edit_manage_user_path(manage_user), :class=>'btn btn-warning' %>  <br/>
      <%= link_to 'Hapus', manage_user_path(manage_user), :class=>'btn btn-danger', confirm: 'Are you sure?', method: :delete %><br/>
    </td>

  </tr>
  <% end %>
</table>
<% end%>



<% content_for :content_nav do %>
<%= link_to 'Buat User', new_manage_user_path, :class=>'btn btn-primary'%>
<% end%>


