<style type="text/css">
  th {
    text-align: center;
  }
</style>

<% content_for :content_title do %>
  Karyawan
<% end%>

<% content_for :content_sub_title do %>
  Daftar Karyawan
<% end%>

<% content_for :content_body do %>

  <table id="example2" class="table table-bordered table-hover">
	<tr>
	  <th> Foto </th>
	  <th> Nama </th>
	  <th> No. telepon </th>
	  <th> Email </th>
	  <th> Jabatan </th>
	  <th> No Rek </th>
	  <th> Aksi </th>
	</tr>

	<% @manage_users.each do |manage_user| %>
	<tr>
	  <td><% if manage_user.avatar.exists? == false %>
                <img src="/assets/avatar3.png" class="img-circle" alt="User Image" height="115px" width="115px"/>
            <% else %>
                <%= image_tag manage_user.avatar.url(:small), :class => "img-circle",  
                :height => "115px", :width => "115px"%>
            <% end %>
      </td>
	  <td>
		<%= link_to "#{manage_user.first_name} #{manage_user.last_name} ".titleize, manage_user_path(manage_user), class: 'btn btn-primary btn-sm' %><br>
	  </td>
	  <td><%= manage_user.telephone %></td>
	  <td><%= manage_user.email %></td>
	  <td><%= manage_user.position %></td>
	  <td align="left">
		<p> No Rekening: <%= manage_user.account_number %></p>
		<p> Nama Bank: <%= manage_user.bank_name %></p>
		<p> Cabang: <%= manage_user.account_branch_name %></p>
		<p> Nama Akun: <%= manage_user.account_name %></p>
	  </td>
	  <td>
		<div class="btn-group">
		  <button type="button" class="btn btn-info btn-flat">Action</button>
		  <button type="button" class="btn btn-info btn-flat dropdown-toggle" data-toggle="dropdown">
			<span class="caret"></span>
			<span class="sr-only">Toggle Dropdown</span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
			<li><%= link_to 'Riwayat Gaji', salary_histories_user_path(manage_user.id) %></li>
			<li><%= link_to 'Ubah', edit_manage_user_path(manage_user) %></li>
			<li><%= link_to 'Hapus', manage_user_path(manage_user), confirm: 'Are you sure?', method: :delete %></li>
		  </ul>
		</div>

	  </td>
	</tr>
	<% end %>
  </table>
<% end%>

<% content_for :content_nav do %>
  <%= link_to 'Buat User', new_manage_user_path, :class=>'btn btn-primary'%>
<% end%>


