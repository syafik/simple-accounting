<% content_for :content_title do %>
  <Tran></Tran>Reports
<% end%>

<% content_for :content_sub_title do %>
  Rekap Report
<% end%>

<section class="content">
  <div class="row">
	<section class="col-md-12 connectedSortable ui-sortable">
	  <div class="nav-tabs-custom" style="cursor: move;">
		<!-- Tabs within a box -->
		<ul class="nav nav-tabs pull-right">
		  <li class="active"><a href="#revenue-chart" data-toggle="tab">Money</a></li>
		  <li class="pull-left header"><i class="fa fa-inbox"></i> Money</li>
		</ul>
		<div class="tab-content no-padding">
		  <!-- Morris chart - Sales -->
		  <div id="myfirstchart" style="height: 250px;"></div>
		</div>
	  </div>
	</section>
  </div>
</section>

<div class="row">
  <div class="col-md-4">
	<div class="box box-solid box-danger">
	  <div class="box-header">
		<h3 class="box-title">Credit:</h3>
	  </div>
	  <div class="box-body">
		<h4><%= number_to_currency(@credits, unit: "Rp. ")%> </h4>
	  </div>
	</div>
  </div>

  <div class="col-md-4">
	<div class="box box-solid box-success">
	  <div class="box-header">
		<h3 class="box-title">Debit:</h3>
	  </div>
	  <div class="box-body">
		<h4><%= number_to_currency(@debits, unit: "Rp. ")%> </h4>
	  </div>
	</div>
  </div>

  <div class="col-md-4">
	<div class="box box-solid box-info">
	  <div class="box-header">
		<h3 class="box-title">Profit:</h3>
	  </div>
	  <div class="box-body">
		<h4><%= number_to_currency(@profit, unit: "Rp. ")%> </h4>
	  </div><!-- /.box-body -->
	</div><!-- /.box -->
  </div><!-- /.col -->
</div>

<%= content_for :bottom_js do %>
  <script type="text/javascript">
	Morris.Line({
	  element: 'myfirstchart',
	  data: <%= raw @data.to_json %>,
	  xkey: 'x',
	  ykeys: ['y', 'z', 's'],
	  labels: ['Debit', 'Credit', 'Selisih']
	}).on('click', function(i, row){
	  console.log(i, row);
	});

  </script>
<% end %>