<style type="text/css">
  th {
    text-align: center;
  }
</style>

<% content_for :content_title do %>
Gaji
<% end%>

<% content_for :content_sub_title do %>
Data Penggajian
<% end%>

<% content_for :content_body do %>
<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th> Tanggal </th>
      <th>  User ID </th>
      <th> Jumlah Hadir</th>
      <th> Jumlah Absen</th>
      <th> Jumlah Jam Lembur</th>
      <th> Gaji Pokok </th>
      <th> Uang Lembur </th>
      <th> Total Uang Lembur </th>
      <th> Total Gaji </th>
      <th> Aksi </th>
    </tr>
  </thead>
  <tbody>
    <% @salaries.each do |salary| %>
    <tr>
      <td><%= salary.date %></td>
      <td><%= salary.try(:salary_history).try(:user).try(:id) %></td>   
      <td><%= salary.total_attendance %></td>
      <td><%= salary.total_absence %></td>
      <td><%= salary.total_overtime_hours %></td>
      <td><%= salary.try(:salary_history).try(:payment) %></td>
      <td><%= salary.try(:salary_history).try(:user).try(:overtime_pay) %></td>
      <td><%= salary.total_overtime_payment %></td>
      <% total_payment = salary.try(:salary_history).try(:payment) + salary.try(:salary_history).try(:user).try(:overtime_pay) + salary.try(:salary_history).try(:user).try(:overtime_pay) rescue 0 %>

      <td><%= total_payment %></td>


      <td>
        <span class="pull-right">
          <%= link_to "<i class=\"icon-fire\"></i> Edit".html_safe, edit_salary_path(salary), :class => "nyroModal btn btn-success" %>
          <%= link_to "<i class=\"icon-fire\"></i> Destroy".html_safe, salary, :class =>"icon-trash", :class => "btn btn-danger", confirm: 'Are you sure?', method: :delete %>
        </span>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= form_for :salary, url: salaries_path do |f| %>


<div class="actions">
  <%= f.submit "Generate"%>
</div>
<% end %>
<% end%>





<% content_for :content_nav do %>
<%= link_to 'Buat Gaji', new_salary_path , :class=>'btn btn-primary'%>
<% end%>




