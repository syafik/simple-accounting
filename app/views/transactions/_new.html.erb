<!-- Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <%= form_for @transaction, url: transactions_path, remote: true do |f| %>
		<div class="modal-header">
		  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		  <h4 class="modal-title" id="myModalLabel"><%= @is_debit ? "Debit" : "Credit" %></h4>
		  <p class="error-messages hide">Pesan error</p>
		</div>
		<div class="modal-body">
			<div class="form-group">
			  <label><%= f.label :date %>:</label>
			  <div class="input-group">
				<div class="input-group-addon">
				  <i class="fa fa-calendar"></i>
				</div>
				<%= f.text_field :date, value: Date.today().strftime("%Y-10-01"), class: "form-control" %>
			  </div><!-- /.input group -->
			</div>
			<%= f.hidden_field :is_debit, value: @is_debit %>
		  <div class="form-group">
			<label><%= f.label :description %></label>
			<%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Enter ..." %>
		  </div>

		  <div class="form-group">
			<label><%= f.label :value %></label>
			<%= f.text_field :value, class: "form-control", placeholder: 0 %>
		  </div>

		</div>
		<div class="modal-footer">
	      <%= f.submit "Save", :class => "btn btn-primary" %>
		  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
	  <% end %>
	</div>
  </div>
</div>