<!-- Modal -->
<div class="modal fade" id="editTransactionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <%= form_for @transaction, url: transaction_path, method: :put do |f| %>
		<div class="modal-header">
		  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
		  <h4 class="modal-title" id="myModalLabel"><%= @is_debit ? "Debit" : "Credit" %></h4>
		  <p class="error-messages hide">Pesan error</p>
		</div>
		<div class="modal-body">
		  <div class="form-group">
			<label><%= f.label :date %>:</label>
			<div class="input-group">
			  <div class="input-group-addon">
				<i class="fa fa-calendar"></i>
			  </div>
			  <%= f.text_field :date, class: "form-control date_custom", :"data-date-format" => "yyyy-mm-dd" %>
			</div><!-- /.input group -->
		  </div>
		  <div class="form-group">
			<label><%= f.label :description %></label>
			<%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Enter ..." %>
		  </div>

		  <div class="form-group">
			<label><%= f.label :value %></label>
			<%= f.text_field :value, class: "form-control", placeholder: 0 %>
		  </div>

		</div>
		<div class="modal-footer">
		  <%= f.submit "Save", :class => "btn btn-primary" %>
		  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		</div>
	  <% end %>
	</div>
  </div>
</div>